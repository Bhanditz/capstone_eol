%h3= I18n.t(:managed_by)
%ul
  - collection.maintained_by.each do |thing|
    %li
      - if thing.is_a? Community
        = link_to image_tag(thing.logo_url, :alt => ''), thing
        %h4= link_to thing.name, thing
        - if current_user.can_edit_collection?(collection) && collection.maintained_by.count > 1
          %p= link_to(I18n.t(:remove), revoke_editor_collection_path(thing, :collection_id => collection.id), :confirm => I18n.t(:are_you_sure))
      - elsif thing.is_a? User
        = link_to image_tag(thing.logo_url(:small), :alt => ''), thing
        %h4= link_to thing.full_name, thing
        %p= thing.tag_line
        - if current_user.can_edit_collection?(collection) && thing.id != current_user.id
          %p= link_to(I18n.t(:remove), revoke_editor_user_path(thing, :collection_id => collection.id), :confirm => I18n.t(:are_you_sure))
