%h3= I18n.t(:managed_by)
%ul
  %li
    - collection.maintained_by.each do |thing|
      - if thing.is_a? Community
        = link_to image_tag(thing.logo_url, :alt => ''), thing
        %h4= link_to thing.name, thing
      - elsif thing.is_a? User
        = link_to image_tag(thing.logo_url(:small), :alt => ''), thing
        %h4= link_to thing.full_name, thing
        %p= thing.tag_line
