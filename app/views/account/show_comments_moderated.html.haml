%table.results_table
  %thead{ :align => "center" }
    %tr{ :align => "center" }
      %th
        %p
          Comments Moderated
      %td
        \&nbsp;&nbsp;&nbsp;Moderator: 
        = h @user.given_name 
        = h @user.family_name 
        \&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        = link_to 'Back to profile',{:controller=>'/account', :action=>:show, :id => @user.id}
        
- if @comment_curation_actions.nil? == false && @comment_curation_actions.size > 0
  = will_paginate @comment_curation_actions
  %table.results_table
    %thead{ :align => "center" }
      %tr{ :align => "center" }
        %th
          Type
        %th
          Activity
        %th
          Comment
        %th
          Visible
        %th
          Created
        %th
          Updated
    %tbody
      - count = 0
      - @comment_curation_actions.each do |ah|
        - row_class = cycle('odd','even')
        - count += 1
        - if ah.affected_comment.parent_type == "TaxonConcept"
          - concept = TaxonConcept.find(ah.affected_comment.parent_id)
          - name = concept.quick_scientific_name(:italicized)
        - else
          - name = ""
        %tr
          %td{ :class => row_class }
            = ah.affected_comment.parent_type
            - if name
              %br
              = link_to name, {:controller=>'/taxa', :action => :show, :id => ah.affected_comment.parent_id }
          %td{ :class => row_class }
            = ah.action_with_object.action_code
            = h format_date_time(ah.updated_at, :format=>'short_no_tz')
          %td{ :class => row_class }
            = ah.affected_comment.body
          %td{ :class => row_class }
            = h format_date_time(ah.affected_comment.visible_at, :format=>'short_no_tz')
          %td{ :class => row_class }
            = h format_date_time(ah.affected_comment.created_at, :format=>'short_no_tz')
          %td{ :class => row_class }
            = h format_date_time(ah.affected_comment.updated_at, :format=>'short_no_tz')
      %tr
        %td{ :colspan => "5" }
          = will_paginate @comment_curation_actions
