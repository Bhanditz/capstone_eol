- curators = @taxon_concept.acting_curators
#page-citation
  %a{:name => 'citation'}
  - if (curators.size > 0)
    = curators.map{|c| link_to h("#{c.given_name} #{c.family_name}"), :controller => :account, :action => :show, :id => c.id, :popup => true}.join(', ') + "."
    - if curators.size == 1
      = "Editor."
    - elsif curators.size > 1
      = "Editors."
  - this_url = url_for(:controller=>'/taxa', :action=>'show', :id=>@taxon_concept.id)
  = I18n.t(:page_reference, :title => @taxon_concept.title(@session_hierarchy), :domain_or_ip => $SITE_DOMAIN_OR_IP, :this_url => this_url, :date => Time.now.strftime("%d %b %Y"))

  /
    =I18n.t("example_")
    =I18n.t("fisher__brian___pogonomyrmex_a")
