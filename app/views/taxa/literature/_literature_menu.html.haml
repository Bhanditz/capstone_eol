#tabs_sidebar
  %ul.tabs
    - if @dropdown_hierarchy_entry
      %li{:class => resource_is_active('taxa/literature', 'show')}
        = link_to I18n.t(:literature_references), taxon_hierarchy_entry_literature_path(@taxon_concept, @dropdown_hierarchy_entry)
      %li{:class => resource_is_active('taxa/literature', 'bhl')}
        = link_to I18n.t(:biodiversity_heritage_library), bhl_taxon_hierarchy_entry_literature_path(@taxon_concept, @dropdown_hierarchy_entry)
    - else
      %li{:class => resource_is_active('taxa/literature', 'show')}
        = link_to I18n.t(:literature_references), taxon_literature_path(@taxon_concept)
      %li{:class => resource_is_active('taxa/literature', 'bhl')}
        = link_to I18n.t(:biodiversity_heritage_library), bhl_taxon_literature_path(@taxon_concept)
