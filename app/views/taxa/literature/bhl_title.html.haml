#content
  .site_column
    = render :partial => 'literature_menu'
    #taxon_names.main_container
      - if @bhl_title_results && @bhl_title_results[:total] > 0
        %table.standard
          %thead
            %tr
              %th= I18n.t(:title)
              %th= I18n.t(:year)
              %th= I18n.t(:details_capital)
              %th= I18n.t(:pages__)
            %tr
              %td
                - first_result = @bhl_title_results[:results].first
                = external_link_to([first_result['publication_title'], first_result['volume_info']].join(' ; '), "http://www.biodiversitylibrary.org/item/#{first_result['title_item_id']}")
                - @bhl_title_results[:results].each do |r|
                  %br
                    = external_link_to([r['prefix'], r['number']].join(' '), "http://www.biodiversitylibrary.org/page/#{r['id']}")
              %td
                = first_result['year']
              %td
                = first_result['details']
              %td.nowrap
                = I18n.t(:pages_with_count, :count => @bhl_title_results[:total])
