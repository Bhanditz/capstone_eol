#text_summary.article.copy
  - unless @summary_text.nil?
    - @summary_text.each do |dato|
      - en_type = dato.data_type.label('en').downcase.strip
      - unless dato.description.empty? || dato.description.nil?
        %div{:class => vetted_id_class(dato), :data => { :text_id =>  dato.id } }
          .header
            %h3= h dato.toc_items[0].label
            = link_to(I18n.t(:text_summary_more_link), taxon_details_path(@taxon_concept.id))
          - # TODO: If our text data object does not contain p tags can we add them?
          - # Without them the text block does not have any semantic meaning.
          = dato.description.balance_tags
          .attribution.meta
            = render :partial => 'data_objects/attribution_minimal', :locals => { :data_object => dato }
            %p= link_to I18n.t("#{en_type}_more_about"), data_object_path(dato)
        - break
