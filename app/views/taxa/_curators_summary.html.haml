#curators_summary.article.list
  - count = curators.count
  .header
    %h3= I18n.t(:curators_summary_header_with_count, :count => count)
    = link_to I18n.t(:curators_summary_learn_more_link), curators_path
  - if count > 0
    %ul
      - curators.each do |curator|
        %li
          = link_to image_tag(curator.logo_url(:small), :alt => I18n.t(:profile_image_alt_text_curator, :user_full_name => h(curator.full_name))), curator
          .details
            %h4= link_to h(curator.full_name), curator
            %p.meta= h(curator.tag_line)
  - else
    .empty
      %p= I18n.t(:curators_empty)
