- content_for :main do
  #page_heading.with_image
    .site_column
      .hgroup
        - if @collection
          = link_to I18n.t(:add_to_my_collection_button), "/placeholder", :class => "button"
          -#FIXME: Change this to collection image - can we get decent alt text for this, otherwise leave blank image doesn't convey anthing useful.
          = image_tag @collection.logo_url, :alt => ""
          %h1= h @collection.name
          - form_for @collection do |f|
            - editable = @collection.editable_by? current_user
            - if editable
              = f.text_area :description, :value => @collection.description, :rows => 2, :cols => 80
            - else
              %p= @collection.description
            = submit_tag I18n.t(:save_collection_description_submit_button) if editable
          -# TODO : Removed the 'updated' from the line above. Seems like it was related with Feeds, need to use activity logs if required.
          -# %p= @collection.description or updated
        - else
          %h1= @page_title || I18n.t(:collections)

  #content
    .site_column
      = yield

= render :file => 'layouts/v2/application'