- content_for :main do
  - if @collection # show, edit, new
    = yield
  - else # index, choose
    #page_heading.with_image
      .site_column
        .hgroup
          %h1= @page_title || I18n.t(:collections)
      = render :partial => 'shared/flash_messages'

    #content
      .site_column
        = yield

= render :file => 'layouts/v2/application'
