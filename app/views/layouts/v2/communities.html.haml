- content_for :main do
  #page_heading.with_image
    .site_column
      .hgroup
        - if @community && ! @community.id.nil?
          -#FIXME what if already a member? what happens to button?
          = link_to I18n.t(:join_community_button), join_community_path(@community.id, :return_to => communities_path(@community.id)), :class => "button"
          -#FIXME: Change this to community image - can we get decent alt text for this, otherwise leave blank image doesn't convey anthing useful.
          = image_tag '/images/v2/icon_communities_tabs.png', :alt => ""
          %h1= h @community.name
          %p= h @community.description
        - else
          %h1= @page_title || I18n.t(:communities)
  .thumbnails
    -# FIXME: convert this to proper community march of life with meaningful alt tags
    %ul
      - 5.times do |i|
        %li= link_to image_tag("v2/temporary_for_mockup/img_home-thumbs_#{i + 1}.jpg", :alt => "Thumbnail #{i}"), "#"
      %li.last= link_to image_tag("v2/temporary_for_mockup/img_home-thumbs_6.jpg", :alt => "Thumbnail 6"), "#"
    .term
      %p Canis lupus Linnaeus, 1758

  #content
    .site_column
      = yield

= render :file => 'layouts/v2/application'
