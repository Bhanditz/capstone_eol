= javascript_include_tag 'admin-content-page-translation'
= javascript_include_tag :fckeditor
- form_for :page,@page,:url=>{:action=>'save_translation', :id=>@page.id, :language_id=>@language.id},:html=>{:id=>'page_form', 'data-page_id' => @page.id} do |f|
  %table
    %tr
      %td
        %strong
          =I18n.t(:location)
      %td
        = @navigation_tree    
    %tr
      %td
        %strong
          = I18n.t("language")
      %td
        = @language.iso_639_1
    %tr
      %td
        %strong
          =I18n.t("published_")
      %td
        = f.check_box :translated_active_translation
        =I18n.t("__must_be_checked_in_order_to_")
    %tr
      %td
        %strong
          =I18n.t("title_")
      %td
        = f.text_field :translated_title, {:size=>'50',:maxlength=>'100'}
        %br
        =I18n.t("shown_to_user_as_the_title_of_")
    %tr
      %td
        %strong
          =I18n.t("meta_keywords_colon")
      %td
        = f.text_field :translated_meta_keywords, {:size=>'50',:maxlength=>'200'}
    %tr
      %td
        %strong
          =I18n.t("meta_description_colon")
      %td
        = f.text_field :translated_meta_description, {:size=>'50',:maxlength=>'200'}
    %tr
      %td{:colspan => 2}
        %strong
          =I18n.t("left_content_area_")
    %tr
      %td{:colspan => 2}
        = fckeditor_textarea(:page, :translated_left_content, :toolbarSet => 'Simple', :width => '100%', :height => '400px')
        %br
        =I18n.t("_html_format__only_enter_if_yo")
    %tr
      %td{:colspan => 2}
        %strong
          =I18n.t("main_content_area_")
    %tr
      %td{:colspan => 2}
        = fckeditor_textarea(:page, :translated_main_content, :toolbarSet => 'Simple', :width => '100%', :height => '400px')
        %br
        =I18n.t("_html_format_")

  %br
  %br
  %input#preview{ :name => "preview", :type => "button", :value => I18n.t("preview_changes") }
  |
  = cancel_button_goes_back('/administrator/content_page')
  |
  = f.submit
  | 
  = link_to I18n.t("delete_firstcap"), {:action=>'delete_translation',:id=>@page.id, :language_id=>@page.current_translation_language.id}, :confirm => I18n.t("are_you_sure___this_action_can"), :method => :delete_translation