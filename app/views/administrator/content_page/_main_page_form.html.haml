%tr
  %td
    %strong
      =I18n.t(:location)
  %td
    - if @navigation_tree && @navigation_tree != ''
      = @navigation_tree
    - else
      = I18n.t(:admin_content_page_root)
- if ContentPage.exists?(@page)
  %tr
    %td
      %strong
        =I18n.t(:page_urls)
    %td
      = external_link_to(cms_page_url(@page.page_url), cms_page_url(@page.page_url), :show_link_icon => false)
      - if alternate = @page.alternate_page_url
        %br
        = external_link_to(cms_page_url(alternate), cms_page_url(alternate), :show_link_icon => false)
%tr
  %td
    %strong
      =I18n.t("page_name_")
  %td
    = f.text_field :page_name, {:size=>'50',:maxlength=>'100'}
    %br
    =I18n.t("used_for_urls___should_be_uniq")
%tr
  %td
    %strong
      =I18n.t("published_")
  %td
    = f.check_box :active
    =I18n.t("__must_be_checked_in_order_to_")