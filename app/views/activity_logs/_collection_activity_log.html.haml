        = I18n.t(:activity_user_added_item_to_collection, :user => h(item.user.short_name), :collection => link_to(item.collection.summary_name, collection_path(item.collection)), :item => link_to(item.collection_item.object.summary_name, data_object_path(item.collection_item.object)))
