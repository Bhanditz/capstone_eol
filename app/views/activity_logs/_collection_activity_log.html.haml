= link_to image_tag(item.user.logo_url(:small), :alt => I18n.t(:comment_show_posters_image_alt,
  :posters_name => h(item.user.short_name))), user_path(item.user), :class => 'avatar'
.details
  %p
    - name_with_link =  link_to h(item.user.short_name), user_path(item.user)
    - case item.activity_id
    - when Activity.create.id
      = I18n.t(:activity_user_created_collection, :user => name_with_link, :collection => link_to(item.collection.summary_name, collection_path(item.collection)))
    - when Activity.collect.id
      - if item.collection_item.nil?
        = I18n.t(:activity_user_added_unknown_item_to_collection, :user => name_with_link, :collection => link_to(item.collection.summary_name, collection_path(item.collection)))
      - else
        - case item.collection_item.object_type
        - when 'TaxonConcept'
          = I18n.t(:activity_user_added_item_to_collection, :user => name_with_link, :collection => link_to(item.collection.summary_name, collection_path(item.collection)), :item => link_to(item.collection_item.object.summary_name, taxon_overview_path(item.collection_item.object)))
        - when 'DataObject'
          = I18n.t(:activity_user_added_item_to_collection, :user => name_with_link, :collection => link_to(item.collection.summary_name, collection_path(item.collection)), :item => link_to(item.collection_item.object.summary_name, data_object_path(item.collection_item.object)))
        - when 'User'
          = I18n.t(:activity_user_added_item_to_collection, :user => name_with_link, :collection => link_to(item.collection.summary_name, collection_path(item.collection)), :item => link_to(item.collection_item.object.summary_name, user_path(item.collection_item.object)))
        - when 'Collection'
          = I18n.t(:activity_user_added_item_to_collection, :user => name_with_link, :collection => link_to(item.collection.summary_name, collection_path(item.collection)), :item => link_to(item.collection_item.object.summary_name, collection_path(item.collection_item.object)))
        - when 'Community'
          = I18n.t(:activity_user_added_item_to_collection, :user => name_with_link, :collection => link_to(item.collection.summary_name, collection_path(item.collection)), :item => link_to(item.collection_item.object.summary_name, community_path(item.collection_item.object)))
        - else
          = I18n.t(:activity_user_added_item_to_collection, :user => name_with_link, :collection => link_to(item.collection.summary_name, collection_path(item.collection)), :item => item.collection_item.object.summary_name)
    - when Activity.remove.id
      = I18n.t(:activity_user_removed_item_from_collection, :user => name_with_link, :collection => link_to(item.collection.summary_name, collection_path(item.collection)), :item => item.collection_item.object.summary_name)
    - when Activity.remove_all.id
      = I18n.t(:activity_user_removed_all_items_from_collection, :user => name_with_link, :collection => link_to(item.collection.summary_name, collection_path(item.collection)))
    - else
      = I18n.t(:activity_user_modified_collection, :user => name_with_link, :collection => link_to(item.collection.summary_name, collection_path(item.collection)))
  %p.meta= I18n.t(:time_ago, :time_passed => time_ago_in_words(item.created_at))

