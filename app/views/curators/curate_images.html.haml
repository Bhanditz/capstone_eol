:javascript
  $j(function() {
  $j("td.overlay_link a[rel]").overlay({
  mask: 'black',
  onBeforeLoad: function() {
  var wrap = this.getOverlay().find(".contentWrap");
  wrap.load(this.getTrigger().attr("href"));
  }
  });
  });
= stylesheet_link_tag 'curator_tools'
-# TODO - Add a selector to Narrow the list by Content Provider
= will_paginate(@images_to_curate)
%table.results_table
  %tr
    %th
      Taxon Name
    %th
      Image
    %th
      Caption
    %th
      Action
  - @images_to_curate.each do |image|
    - row_class = cycle('odd', 'even')
    %tr
      %td{:class => "overlay_link #{row_class}"}
        = link_to(image.taxon_concepts[0].scientific_name, {:action => 'curate_image', :data_object_id => image.id}, {:rel => '#overlay'})
        - c_name = image.taxon_concepts[0].common_name
        - if !c_name.blank?
          %br
          = c_name
      %td{:class => row_class}
        = link_to(image_tag(image.thumb_or_object(:medium)), image.taxon_concepts.first)
        -# TODO - some way to see the original-sized image
        -# TODO - show attribution - at least provider and agents, probably not license, rights, etc...
      %td{:class => row_class}
        = image.description
        -# TODO = show location information (if available)
      %td{:class => row_class}
        %input{:type => 'radio', :name => "trust_#{image.id}"}
          Trust
        %br
        %input{:type => 'radio', :name => "trust_#{image.id}"}
          Untrust
          -# TODO - this must prompt for a reason/comment, yadda yadda
        %br
          Comment ( TODO )
= will_paginate(@images_to_curate)
#overlay.overlay
  .contentWrap
