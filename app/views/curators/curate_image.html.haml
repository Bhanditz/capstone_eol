%h3
  = link_to(@data_object.taxon_concepts[0].scientific_name, @data_object.taxon_concepts.first)
%p
  %em
    = @data_object.taxon_concepts[0].common_name
.data_object_view
  = image_tag(@data_object.smart_image, :id => 'big-img')
  = render :partial => 'data_objects/attribution', :locals => {:data_object => @data_object, :skip_permalink => true}, :layout => @layout
  .description
    .credit-caption
      = "Description"[]
    .credit-value
      = @data_object.description
.curation
  .curation-section
    .credit-caption
      = "Rating"[]
    .credit-value
      = render :partial => '/taxa/star_rating', :locals => {:data_object => @data_object, :show_controls => true}
  .curation-section
    .credit-caption
      = "Vetted"[]
    .credit-value
      %span#trust-label
        = @data_object.vetted.label
      %br/
      = link_to_remote("Set to Trusted"[], :url => {:action => :trust, :data_object_id => @data_object.id, :div_id => 'trust-label'}, :html_options => {:id => 'trust'})
      %br/
      = link_to_remote("Set to Untrusted"[], :url => {:action => :untrust, :data_object_id => @data_object.id, :div_id => 'trust-label'}, :html_options => {:id => 'untrust'})
      %form#untrust_reasons{:action => '/curators/update_reasons'}
        = hidden_field_tag 'data_object_id', @data_object.id
        = render :partial => 'data_objects/untrust_reasons', :locals => { :data_object => @data_object }
  .curation-section
    .credit-caption
      = "Visibility"[]
    .credit-value
      %span#visibility-label
        = @data_object.visibility.label
      %br/
      = link_to_remote("Show to all users"[], :url => {:action => :show, :data_object_id => @data_object.id, :div_id => 'visibility-label'})
      %br/
      = link_to_remote("Hide for all except curators"[], :url => {:action => :hide, :data_object_id => @data_object.id, :div_id => 'visibility-label'})
      %br/
      = link_to_remote("Permanently Remove"[], :url => {:action => :remove, :data_object_id => @data_object.id, :div_id => 'visibility-label'})
  .curation-section
    .credit-caption
      = "Comment"[]
    .credit-value
      This comment will be publicly visible.
      %form#comment{:action => :comment, :data_object_id => @data_object.id}
        = hidden_field_tag 'data_object_id', @data_object.id
        = text_area_tag 'comment', nil, :rows => 7, :cols => 32
        #save-comment
          = submit_tag "Save"
-# TODO - move this to an external file.
:javascript
  $j('#untrust_reasons input').click(function() {
  $j.post($j('#untrust_reasons').attr('action'), $j('#untrust_reasons').serialize());
  });
  $j('form#comment').submit(function() {
  $j.post($j('form#comment').attr('action'), $j('form#comment').serialize());
  $j(':input', 'form#comment').not(':submit').val(''); // reset the form
  return false;
  });
