- last ||= nil
%li{ :class => (last ? 'last' : nil) }
  - random_images = explore_taxa.dup
  - random_images.each_with_index do |random_image, i|
    - next if i % 6 != index
    = link_to image_tag(random_image.data_object.thumb_or_object('130_130'),
      :alt => random_image.taxon_concept.entry.name.canonical_form.string), "/pages/#{random_image.taxon_concept_id}"
