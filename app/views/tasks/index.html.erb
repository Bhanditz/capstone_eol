<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Task name</th>
    <th>Task state</th>
    <th>Owner user</th>
    <th>Created by user</th>
    <th>Expires on</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.task_name_id %></td>
    <td><%=h task.task_state_id %></td>
    <td><%=h task.owner_user_id %></td>
    <td><%=h task.created_by_user_id %></td>
    <td><%=h task.expires_on %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>