%div{"data-role"=>"header", "data-position"=>"fixed", "data-theme"=>"a"}
  =link_to image_tag("/images/mobile/logo_simple.png", :height => '24')
  %h1=t "mobile.contents.home" 

%div{"data-role"=>"content"}
  
  %form{"action"=>"#", "method"=>"get"}
    %div#search_field_container{"data-role"=>"fieldcontain"}
      %input{"type"=>"search","name"=>"search_query","id"=>"search2","value"=>""}

  %ul#static_taxa_index{"data-role" => "listview", "data-inset"=>"true"}
    %li{"data-role"=>"list-divider"}=t "mobile.contents.taxa" 
    %li= link_to "Nihileri voluptasus", mobile_taxon_path(9)
    %li= link_to "Dignissimosii inutes", mobile_taxon_path(10)
    %li= link_to "Fugais utharumatus", mobile_taxon_path(11)

  %ul{"data-role" => "listview", "data-inset"=>"true", "data-theme"=>"c", "list-divider-theme"=>"e"}
    %li.taxon
      =image_tag("/images/v2/icon_taxon.png")
      %h3 1,915,247 #{t(:taxa)}
      %p= link_to t(:what_is_a_taxon), ""
    %li.contributors
      =image_tag("/images/v2/icon_contributors.png")
      %h3 3,154 #{t(:contributors_like_you)}
      %p= link_to I18n.t(:learn_how_to_join), ""
    %li.communities
      =image_tag("/images/v2/icon_communities.png")
      %h3 861 #{t(:communities)}
      %p= link_to I18n.t(:learn_how_to_interact), ""
    %li.images
      =image_tag("/images/v2/icon_partners.png")
      %h3 753,234 #{t(:images)}
      %p= link_to t(:browse_gallery), ""
    %li.partners
      =image_tag("/images/v2/icon_images.png")
      %h3 324 #{t(:content_partners)}
      %p= link_to t(:learn_about_content_partners), ""
    
%div{"data-role"=>"footer"}
  %h3#go_to_full{"data-inline"=>"true"}
    =link_to_remote "Full site", :url => "/mobile/contents/disable"
  