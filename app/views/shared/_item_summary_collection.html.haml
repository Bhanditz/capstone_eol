= link_to image_tag(item.logo_url(:small)), collection_path(item)
= link_to content_tag(:span, '', {:class => 'icon', :title => I18n.t(:item_type_collection_assistive)}), collection_path(item)
- truncated_name = h(truncate(item.name, :length => 64))
%h4= link_to(truncated_name, collection_path(item), :alt => item.name == truncated_name ? nil : item.name)
= I18n.t(:items_with_count_semi_colon, :count => item.collection_items.count)
= I18n.t(:maintained_by)
- by = item.maintained_by
= link_to truncate(by.summary_name, :length => 64), link_to_item(by)
