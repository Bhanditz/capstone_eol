- en_type ||= en_type(item)
= link_to image_tag(item.smart_thumb), data_object_path(item)
%span.icon{:title => I18n.t("item_type_#{en_type}_assistive")}
%h4= link_to item.best_title, data_object_path(item)
- secondary_title = I18n.t("#{en_type}_of") + ' ' + item.first_hierarchy_entry.name.canonical_form.string
- if item.published_entries.length > 1
  - secondary_title += ' ' + I18n.t(:and) + ' ' + I18n.t(:other_taxa_with_count, :count => item.published_entries.length - 1)
= secondary_title
