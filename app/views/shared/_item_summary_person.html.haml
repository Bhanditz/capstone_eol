- view_style ||= 'default'
- unless view_style == 'names_only'
  = link_to image_tag(item.logo_url(:small)), user_path(item)
- unless ['image_gallery','names_only'].include?(view_style)
  = link_to content_tag(:span, '', {:class => 'icon', :title => I18n.t(:item_type_person_assistive)}), user_path(item)
%h4
  = link_to h(truncate(item.full_name, :length => 64)), user_path(item)
  - if view_style == 'names_only'
    %small= I18n.t(:item_type_person)
- unless ['image_gallery','names_only'].include?(view_style)
  = link_to [ h(item.username), sanitize(item.tag_line).balance_tags ].compact.join('<br/>'), user_path(item)
