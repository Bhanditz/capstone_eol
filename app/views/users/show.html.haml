#profile_info.main_container
  - unless @user.bio.blank?
    .article
      .header
        %h3= I18n.t(:users_about_me_header)
      .copy
        %p= allow_some_html @user.bio
  .article.half.info
    .header
      %h3= I18n.t(:users_my_info_header)
    %dl
      %dt= I18n.t('activerecord.attributes.user.full_name')
      %dd= h @user.full_name
      %dt= I18n.t('activerecord.attributes.user.username')
      %dd= h @user.username
      - unless @user.user_identities.blank?
        %dt= I18n.t('helpers.label.user.user_identities')
        %dd= @user.user_identities.collect{|ui| ui.label}.join(', ')
  .article.half.list
    .header
      %h3= I18n.t(:users_member_of_count_communities, :count => @user.members.size)
    - unless @user.members.blank?
      %ul
        - @user.members.each do |member|
          - if community = member.community
            %li= link_to h(community.name), community
  - if @user.is_curator?
    .article.half.info
      .header
        %h3= I18n.t(:users_curation_header)
      %dl
        %dt= I18n.t('activerecord.attributes.user.credentials')
        %dd= h @user.credentials
        %dt= I18n.t('activerecord.attributes.user.curator_scope')
        %dd= h @user.curator_scope

  .article.half.list
    .header
      %h3= I18n.t(:activity)
    %ul
      %li
        Objects Curated:
        = @user.total_data_objects_curated
        /= link_to @user.total_data_objects_curated,{:controller=>'/account', :action=>:show_objects_curated, :id => @user.id}
      %li
        Comments Moderated:
        = @user.total_comments_curated
        /= link_to @user.total_comments_curated,{:controller=>'/account', :action=>:show_comments_moderated, :id => @user.id}
      %li
        Species Curated:
        = @user.total_species_curated
        /= link_to @user.total_species_curated,{:controller=>'/account', :action=>:show_species_curated, :id => @user.id}
      %li
        User-submitted text:
        = @user_submitted_text_count
        /= link_to @user_submitted_text_count,{:controller=>'administrator/user_data_object', :action=>:index, :user_id => @user.id}
